<%- include('partials/header') %>

  <div class="jumbotron text-center">
    <div class="container">
      <i class="fas fa-key fa-6x"></i>
      <h1 class="display-3">You've Discovered My Secret!</h1>
      <% users1WithSecrets.forEach(function(user) { %>
        <% user.secret.forEach(function(secret) { %>
          <p class="secret-text">
            <%= secret %>
          </p>
          <% }); %>
            <% }); %>

              <hr>

              <p>If you want to write your own secrets kindly Login/Register</p>

              <a class="btn btn-dark btn-lg" href="/login" role="button">Login</a>
              <a class="btn btn-primary btn-lg" href="/register" role="button">Register</a>
    </div>
  </div>

  <%- include('partials/footer') %>
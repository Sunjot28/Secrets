<%- include('partials/header') %>

  <div class="container mt-5">
    <div class="row">
      <div class="col-sm-8 mx-auto">
        <h1 class="pb-3">Register</h1>
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /register route -->
            <form action="/register1" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-dark mr-3">Register</button>
                <a class="login btn btn-dark" href="/login" role="button">Login</a>
              </div>
            </form>
            <hr style="width: 12rem;">
            <a class="btn google btn-block btn-outline-dark" href="/auth/google" role="button">
              <i class="fab fa-google"></i>
              | Sign Up with Google
            </a>
          </div>
        </div>
      </div>


